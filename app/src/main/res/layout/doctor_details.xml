<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DoctorDetails">

    <ImageView
        android:id="@+id/LogoView"
        android:layout_width="85dp"
        android:layout_height="89dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="Change\n Doctor Details"
        android:textAlignment="center"
        android:textColor="@color/colorNeutralWhite"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/LogoView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="575dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="17dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/DocNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name of Doctor"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/DocNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint=" Current Name of Doctor"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginTop="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/DocPhoneNumView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number of Doctor"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/DocPhoneNumEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint=" Current Phone Number of Doctor"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginTop="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/DocEmailView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address of Doctor"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/DocEmailEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint=" Current Email Address of Doctor"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginTop="5dp" />






                <Space
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <Button
                    android:id="@+id/SaveBtn"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="#2DE160"
                    android:bottomLeftRadius="10dp"
                    android:bottomRightRadius="10dp"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    android:layout_marginStart="81dp"
                    android:layout_marginEnd="81dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/CancelBtn"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="#FF0909"
                    android:bottomLeftRadius="10dp"
                    android:bottomRightRadius="10dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    android:layout_marginStart="81dp"
                    android:layout_marginEnd="81dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>