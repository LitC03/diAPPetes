<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ExtraNotes">

    <ImageView
        android:id="@+id/LogoView"
        android:layout_width="85dp"
        android:layout_height="89dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="Extra Notes"
        android:textAlignment="center"
        android:textColor="@color/colorNeutralWhite"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/LogoView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/LogoView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <EditText
            android:id="@+id/extraNotes"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:background="@drawable/roundtext"
            android:backgroundTint="@color/colorNeutralWhite"
            android:hint="Enter notes"
            android:inputType="textMultiLine"
            android:lines="6"
            android:minLines="6"
            android:gravity="top|start"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:padding="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorNeutralDarkGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LogoView" />

        <TextView
            android:id="@+id/DateTimeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textColor="@color/colorNeutralWhite"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/extraNotes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/datePick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundtext"
            android:backgroundTint="@color/colorNeutralWhite"
            android:hint="Date"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorNeutralDarkGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DateTimeView" />

        <TextView
            android:id="@+id/timePick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtext"
            android:backgroundTint="@color/colorNeutralWhite"
            android:hint="Time"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorNeutralDarkGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/datePick"
            android:layout_marginTop="28dp" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/save"
            android:textColor="@color/colorPrimary"
            android:text="Save"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timePick"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbutton"
            android:text="Cancel"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saveBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>