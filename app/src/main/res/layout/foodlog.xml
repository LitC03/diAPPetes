<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".FoodLog">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="Food Log"
        android:textAlignment="center"
        android:textColor="@color/colorNeutralWhite"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/LogoView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <ImageView
        android:id="@+id/LogoView"
        android:layout_width="85dp"
        android:layout_height="89dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/LogoView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MealView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meal"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/MealField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundtext"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint="Enter food"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorNeutralDarkGray"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/CarbView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrates (g)"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/CarbField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundtext"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint="Enter carbohydrates"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorNeutralDarkGray"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/SugarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Of which is sugars (g)"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/SugarField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundtext"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint="Enter sugars"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorNeutralDarkGray"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/CalView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calories (kcal)"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/CalField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundtext"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint="Enter calories"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorNeutralDarkGray"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/DateTimeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date and Time"
                    android:textColor="@color/colorNeutralWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/datePick"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundtext"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint="Date"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorNeutralDarkGray"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/timePick"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/roundtext"
                    android:backgroundTint="@color/colorNeutralWhite"
                    android:hint="Time"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorNeutralDarkGray"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="@color/save"
                    android:textColor="@color/colorPrimary"
                    android:text="Save"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp" />

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbutton"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/save"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>